<div style="background-color: #e3e2e2; height:100%;width:100% ;">
    <div class="section-personal-infor">
        <div class="personal-infor__content">
            <div class="personal-infor__header">
                <h1 class="BVrKV_">Hồ sơ của tôi</h1>
                <div class="QcW5xy">Quản lý thông tin hồ sơ để bảo mật tài khoản</div>
            </div>
            <div class="personal-infor__body">
                <form method="POST" action="/api/user/update-user?_method=PUT">
                    <div class="form-group">
                        <label for="name">Tên</label>
                        <input
                            type="text"
                            class="form-control"
                            value="{{user.name}}"
                            id="name"
                            name="name"
                        />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                            value="{{user.email}}"
                        />
                    </div>
                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        <input
                            type="text"
                            class="form-control file-input-image"
                            id="phone"
                            name="phone"
                            value="{{user.phone}}"
                        />
                        <div class="image-section"></div>
                    </div>
                    <div class="form-group">
                        <label for="sexual">Giới tính </label>
                        <input
                            type="text"
                            class="form-control"
                            id="sexual"
                            name="sexual"
                            value="{{user.gender}}"
                        ></input>
                    </div>
                    <div class="form-group">
                        <label for="birth">Ngày Sinh </label>
                        <input
                            type="text"
                            class="form-control"
                            id="birth"
                            name="birth"
                        >{{user.birth}}</input>
                    </div>
                    <div class="form-group">
                        <label for="address">Địa chỉ </label>
                        <input
                            type="text"
                            class="form-control"
                            id="address"
                            name="address"
                        >{{user.address}}</input>
                    </div>
                    <button
                        type="submit"
                        class="btn btn-primary btn-fix-product"
                        style="background-color:#ee4d2d;"
                    >Lưu </button>
                </form>
            </div>
        </div>
    </div>
</div>