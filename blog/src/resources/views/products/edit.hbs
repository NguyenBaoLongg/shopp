<div class="mt-4">
    <h3>Cập nhật sản phẩm</h3>

    <form
        class="mt-4"
        method="POST"
        action="/products/{{product._id}}?_method=PUT"
    >
        <div class="form-group">
            <label for="title">Tên sản phẩm</label>
            <input
                type="text"
                class="form-control"
                value="{{product.title}}"
                id="title"
                name="title"
            />
        </div>
        <div class="form-group">
            <label for="description">Giá sản phẩm</label>
            <input
                type="text"
                class="form-control"
                id="price"
                name="price"
                value="{{product.price}}"
            />
        </div>
        <div class="form-group">
            <label for="iamge">Ảnh sản phẩm</label>
            <input
                type="file"
                class="form-control file-input-image"
                id="image"
                name="image"
            />
            <div class="image-section"></div>
        </div>
        <div class="form-group">
            <label for="description">Mô tả </label>
            <textarea
                type="text"
                class="form-control"
                id="description"
                name="description"
            >{{product.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-fix-product" style="background-color:#ee4d2d;">Sửa sản
            phẩm</button>
    </form>
</div>

<script>
    const btnFixProduct = document.querySelector('.btn-fix-product')
    btnFixProduct.onclick() = function(){ const fileInput =
    document.querySelector('.file-input-image') const imageSection =
    document.querySelector('.image-section') if(fileInput.files.length<0){
    imageSection.innerHTML = ` <input type="text" class="form-control
    file-input-image" id="image" name="image" value='${{{product.image}}}' /> `
    } }
    const priceInput = document.getElementById("price");
    priceInput.addEventListener("input",(e)=>{
        let value = e.target.value;
        value = value.replace(/[^0-9]/g,"");
        e.target.value = parseInt(value).toLocaleString("vi-VN");
    })
</script>