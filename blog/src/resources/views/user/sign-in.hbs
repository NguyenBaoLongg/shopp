<div style="background-color:#ee4d2d; width:100%;height:100%;position:relative">
    <div class="login-section">
        <form action="/api/user/sign-in" method="POST" id="form-2" class="form">
            <div class="login">
                <div class="auth-form_container">
                    <div class="auth-form_header">
                        <h3 class="auth-form_heading">Đăng nhập</h3>
                        <span class="switch-btn_auth">
                            <a href="/sign-up">Đăng ký</a></span>
                    </div>

                    <div class="auth-form_form">
                        <div class="auth-form_gr">
                            <label for="email" class="form-label"></label>

                            <input
                                type="text"
                                name="email"
                                id="email"
                                class="auth-form_input"
                                placeholder="Email của bạn hoặc tên đăng nhập"
                            />

                            <span class="form-message"></span>
                        </div>
                        <div class="auth-form_gr">
                            <label for="password" class="form-label"></label>

                            <input
                                type="password"
                                name="password"
                                id="password"
                                class="auth-form_input"
                                placeholder="Mật khẩu của bạn"
                            />

                            <span class="form-message"></span>
                        </div>

                        <div class="auth-form_aside">
                            <div class="auth-form_help">
                                <a href="">Quên mật khẩu</a>
                                <span class="separate"></span>
                                <a href="" class="text_need-help">Cần trợ giúp ?</a>
                            </div>
                        </div>

                        <div class="auth-form_controls">
                            <button class="form-submit">Đăng nhập</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', (event) => { const
    handleHeader = document.querySelector('.header'); if (handleHeader) {
    handleHeader.style.display = "none"; } }); const btnSignIn =
    document.querySelector(".form-submit"); btnSignIn.addEventListener = (e)=>{
    e.preventDefault() }
</script>